<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/biruelektrik"
    tools:context=".MenuAwal">

    <ImageView
        android:id="@+id/gmbr1"
        android:layout_width="75dp"
        android:layout_height="90dp"
        android:src="@drawable/bulat" />

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="310dp"
        android:src="@drawable/bulat2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/omabk" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Water Reservoir"
            android:layout_gravity="center"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:text="Login to aplikasi"
            android:textColor="@color/black"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:drawableEnd="@drawable/login"
            android:onClick="onLoginButtonClick"
            style="@style/button_calculatermenuawal"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:layout_marginStart="30dp"
            android:text="Register to aplikasi"
            android:textColor="@color/black"
            android:layout_marginTop="60dp"
            android:textStyle="bold"
            android:drawableEnd="@drawable/baseline_app_registration_24"
            style="@style/button_calculatermenuawal"
            android:onClick="onRegisterClick" />

    </LinearLayout>



</RelativeLayout>